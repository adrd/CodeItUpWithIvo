@using System.Dynamic

@model TimeSpan?
    
@{
    var htmlAttributes = new ExpandoObject() as IDictionary<string, object>;

    htmlAttributes.Add("class", "full-kendo-editor");

    if (this.ViewData.ModelMetadata.AdditionalValues.ContainsKey(WebConstants.Placeholder))
    {
        htmlAttributes.Add("placeholder", ViewData.ModelMetadata.AdditionalValues[WebConstants.Placeholder] as string);
    }

    if (ViewData.ContainsKey(WebConstants.IsDisabled) && (bool)ViewData[WebConstants.IsDisabled])
    {
        htmlAttributes.Add("disabled", "disabled");
    }
}

@(Html
    .Kendo()
    .TimePickerFor(m => m)
    .Format("HH:mm")
    .HtmlAttributes(htmlAttributes)
)